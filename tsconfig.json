{
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"~/*": ["./*"]
		}
	},
	"files": [
		"exports/index.d.ts"
	],
	"include": [
		"exports/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
