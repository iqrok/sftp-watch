{
	"name": "@iqrok/sftp-watch",
	"version": "0.2.1",
	"files": [
		"src/*.cc",
		"src/*.cpp",
		"src/*.hpp",
		"src/*.h",
		"lib/*.js",
		"CMakeLists.txt"
	],
	"scripts": {
		"sample": "node sample/index.js",
		"build:static": "cmake-js rebuild --CDUSE_STATIC_LIBS=1",
		"compile": "cmake-js compile",
		"clean": "cmake-js clean",
		"rebuild:dbg": "cmake-js rebuild --CDCMAKE_BUILD_TYPE=Debug",
		"rebuild": "cmake-js rebuild",
		"postinstall": "npm run compile"
	},
	"main": "build/Release/sftp-watch.node",
	"devDependencies": {
		"cmake-js": "^7.3.1"
	},
	"dependencies": {
		"node-addon-api": "^8.5.0"
	}
}
